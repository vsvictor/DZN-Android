<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzn.dzn.application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dzn_dzn_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Integrity Facebook -->
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider476773322496190"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Edit activity -->
        <activity
            android:name=".Activities.NewEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNewEditTheme" />

        <!-- Settings activity -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSettingsTheme" />

        <!-- Alarms activity -->
        <activity
            android:name=".Activities.AlarmsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />

        <activity android:name=".Activities.EditListAlarmsActivity"
            android:screenOrientation="portrait" />

        <!-- Start activity -->
        <activity
            android:name=".Activities.StartActivity"
            android:screenOrientation="portrait" />

        <!-- Create Selfie Activity -->
        <activity android:name=".Activities.CreateSelfieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />
    </application>
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera2" android:required="true" />

</manifest>