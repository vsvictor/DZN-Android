<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzn.dzn.application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dzn_dzn_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Edit activity -->
        <activity
            android:name=".Activities.NewEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNewEditTheme" />

        <!-- Settings activity -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSettingsTheme" />

        <!-- Alarms activity -->
        <activity
            android:name=".Activities.AlarmsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />

        <activity android:name=".Activities.EditListAlarmsActivity" />

        <!-- Start activity -->
        <activity android:name=".Activities.StartActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>