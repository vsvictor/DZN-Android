<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzn.dzn.application">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/dzn_dzn_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:launchMode="singleTask"
        android:theme="@style/AppTheme" >

        <!-- Integrity Facebook -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider651800944972928"
            android:exported="true" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Integrity VK -->
        <activity android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Edit activity -->
        <activity
            android:name=".Activities.NewEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNewEditTheme" />

        <!-- Settings activity -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSettingsTheme" />

        <!-- Alarms activity -->
        <activity
            android:name=".Activities.AlarmsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />

        <activity
            android:name=".Activities.EditListAlarmsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />
            android:screenOrientation="portrait" />

        <!-- Start activity -->
        <activity
            android:name=".Activities.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SampleTheme" />

        <!-- Create Selfie Activity -->
        <activity
            android:name=".Activities.CreateSelfieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppAlarmsTheme" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Tested Activity of social network -->
        <activity android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SampleTheme" />
    </application>

</manifest>